#!/bin/bash

# === AXPT | Full Ritual: Token + Sync + Deploy ===
# Usage: chmod +x bin/launch && bin/launch

timestamp=$(date +"%Y-%m-%d_%H-%M-%S")
logfile="logs/fullLaunch_$timestamp.log"
mkdir -p logs
touch "$logfile"

echo "ðŸ““ Log will be saved to: $logfile"

# Step 1: Token Generation
echo -e "\nðŸ” [1/4] Launching token creation wizard..."
bin/token generate | tee -a "$logfile"

# Step 2: Ask to sync env
echo -e "\nðŸŒ [2/4] Syncing local .env to Vercel..."
read -p "ðŸ§¬ Sync .env to Vercel before deploy? (y/n): " syncEnv
if [ "$syncEnv" == "y" ]; then
  bin/env-sync >> "$logfile" 2>&1
  if [ $? -eq 0 ]; then
    echo "âœ… Env synced successfully." | tee -a "$logfile"
  else
    echo "âŒ Env sync failed." | tee -a "$logfile"
    exit 1
  fi
else
  echo "ðŸ•Šï¸ Skipping env sync by choice." | tee -a "$logfile"
fi

# Step 3: Run full preflight ritual
echo -e "\nðŸ§± [3/4] Running full preflight..."
bin/preflight | tee -a "$logfile"
if [ $? -ne 0 ]; then
  echo "âŒ Preflight failed. Aborting launch." | tee -a "$logfile"
  exit 1
fi

# Step 4: Deploy
echo -e "\nðŸš€ [4/4] Choose Deployment Method"
echo -e "  1) Vercel CLI"
echo -e "  2) Git Push"
read -p "â†’ Deploy now? (1/2) [default: 1]: " deployOpt
deployOpt=${deployOpt:-1}

if [ "$deployOpt" == "1" ]; then
  vercel --prod --confirm 2>&1 | tee -a "$logfile"
elif [ "$deployOpt" == "2" ]; then
  bin/push | tee -a "$logfile"
else
  echo "ðŸ›‘ Invalid selection. Launch aborted." | tee -a "$logfile"
  exit 1
fi

echo -e "\nâœ… Full Launch Ritual Complete"
echo "ðŸ“œ Log saved to $logfile"