#!/bin/bash

# === AXPT | Live Token Verifier ===
# Usage: bin/token-debug-live "<token>"

if [ -z "$1" ]; then
  echo "‚ùå Usage: bin/token-debug-live \"<token>\""
  exit 1
fi

TOKEN="$1"
TEMP_ENV=".env.live"

echo "üåê Fetching live environment variables from Vercel..."
vercel env pull --environment=production "$TEMP_ENV" > /dev/null

if [ ! -f "$TEMP_ENV" ]; then
  echo "‚ùå Failed to fetch $TEMP_ENV"
  exit 1
fi

echo "üîê Loading PARTNER_SECRET from $TEMP_ENV..."
export $(grep PARTNER_SECRET "$TEMP_ENV")

if [ -z "$PARTNER_SECRET" ]; then
  echo "‚ùå PARTNER_SECRET not found in $TEMP_ENV"
  rm "$TEMP_ENV"
  exit 1
fi

echo "üß™ Verifying token using live secret..."
npx tsx app/scripts/partner/token.ts verify "$TOKEN"

echo "üßº Cleaning up $TEMP_ENV..."
rm "$TEMP_ENV"