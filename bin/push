#!/bin/bash

# === AXPT | Git Push Deploy + Optional Vercel Trigger ===
timestamp=$(date +"%Y-%m-%d_%H-%M-%S")
logfile="logs/gitPushDeploy_$timestamp.log"
mkdir -p logs

log() {
  echo -e "$1" | tee -a "$logfile"
}

log "ğŸ“¦ Git Commit & Push Initiated at $timestamp"

git add . >> "$logfile" 2>&1
git commit -m "ğŸ“¦ Auto push at $timestamp" >> "$logfile" 2>&1
git push origin master >> "$logfile" 2>&1

if [ $? -eq 0 ]; then
  log "âœ… Changes pushed to Git."

  echo -e "\nğŸš€ Would you like to trigger a Vercel deployment now?"
  read -p "â†’ Deploy to Vercel now? (y/n): " deployNow

  if [ "$deployNow" == "y" ]; then
    vercel --prod --yes >> "$logfile" 2>&1
    if [ $? -eq 0 ]; then
      log "âœ… Vercel deploy complete."
    else
      log "âŒ Vercel deploy failed."
    fi
  else
    log "ğŸ•Šï¸ Skipped Vercel deploy by user choice."
  fi
else
  log "âŒ Git push failed."
  exit 1
fi

log "ğŸ“œ Log saved to $logfile"