{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "app/src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/lotties/*": ["lotties/*"],
      "@/config/*": ["config/*"],
      "@partner/*": ["../../scripts/partner/*"],
      "@utils/*": ["../scripts/partner/utils/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../.next/types/**/*.ts",
    "../next-env.d.ts",
    ".next/types/**/*.ts",
    "../scripts/**/*"
  ],
  "exclude": ["node_modules"]
}