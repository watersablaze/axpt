{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",                         
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,                  
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "incremental": true,
    "baseUrl": ".",
    "types": ["bcryptjs", "chalk"],
    "paths": {
      "@/*": ["src/*"],

      "@/lib/*": ["src/lib/*"],
      "@/env/*": ["src/lib/env/*"],
      "@/auth/*": ["src/lib/auth/*"],
      "@/token/*": ["src/lib/token/*"],
      "@/token": ["src/lib/token/index.ts"],
      "@/utils/*": ["src/lib/utils/*"],
      "@/constants/*": ["src/constants/*"],
      "@/logging/*": ["src/lib/logging/*"],
      "@/lotties/*": ["src/lib/lotties/*"],
      "@/prisma": ["src/lib/prisma.ts"],

      "@/components/*": ["src/components/*"],
      "@/onboarding/*": ["src/components/onboarding/*"],
      "@/styles/*": ["src/styles/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/stores/*": ["src/stores/*"],

      "@/cli/*": ["cli/*"],
      "@/scripts/*": ["scripts/*"],
      "@/flows/*": ["scripts/partner-tokens/utils/flows/*"],

      "@/types/*": ["src/types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "app/api",
    "cli",
    "lib",
    "scripts",
    "middleware.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "types/global.d.ts",
    "src/lib/prisma.ts",

    // Explicit .tsx files
    "staging/SessionInitializer.tsx",
    "staging/useSessionStore.ts",
    "staging/getSessionFromCookie.ts",
    "staging/generateTokenForCLI.ts",
    "staging/generateTokenCLIFlow.ts",
    "staging/SharedDocViewer.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "src/_archive",
    "src/**/_archive/**"
  ]
}