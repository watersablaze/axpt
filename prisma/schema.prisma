generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model RevokedToken {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  expiresAt Json?
  /// Field referred in an index, but found no data to define the type.
  jti       Json?  @unique

  @@index([expiresAt])
}

model Session {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  sessionToken Json?  @unique
}

model Subscriber {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  email Json?  @unique
}

model Transaction {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  createdAt   Json?
  /// Field referred in an index, but found no data to define the type.
  recipientId Json?
  /// Field referred in an index, but found no data to define the type.
  senderId    Json?
  /// Field referred in an index, but found no data to define the type.
  userId      Json?

  @@index([userId])
  @@index([createdAt])
  @@index([senderId])
  @@index([recipientId])
}

model User {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt           DateTime @db.Date
  email               String   @unique
  encryptedPrivateKey String
  industry            String?
  interests           String?
  isAdmin             Boolean?
  iv                  String
  name                String
  password            String
  role                String
  updatedAt           DateTime @db.Date
  walletAddress       String?  @unique
  walletBalance       Float
}

model VerificationToken {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  identifier Json?  @unique
  /// Field referred in an index, but found no data to define the type.
  token      Json?  @unique

  @@unique([identifier, token])
}

model users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  isAdmin  Boolean
  name     String
  password String
}
